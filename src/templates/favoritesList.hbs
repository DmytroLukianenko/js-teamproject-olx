<section class="favorites container">
  <h1 class="favorites__title">Избранное</h1>
  <ul class="favorites__list list">
    {{#each this}}
    <li class="favorites__item" data-card="{{this._id}}">
      <div class="favorites__item-img-wrapper" data-card="{{this._id}}">
        {{#with this.imageUrls}}
        <img data-card="{{this._id}}" class="favorites__item-img" src="{{this.[0]}}" alt="{{this.title}}" />
        {{/with}}
      </div>

      <h2 class="favorites__item-title" data-card="{{this._id}}">{{this.title}}</h2>
      <p class="favorites__item-price" data-card="{{this._id}}">{{this.price}} <span> &#8364;</span></p>
    </li>
    {{/each}}
  </ul>

</section>