<form class="form" name="advForm">
    <b class="form-text">Создать объявление</b>
    <div class="form-fields">
        <div class="flex-input-form">
            <label class="product-name">Название товара</label>
            <input required type="text" class="form-input name-product-form" name="title" placeholder=" " minlength="5"
                title="The value is too short, it must be at least 5 symbols" />
        </div>
        <div class="flex-input-form flex-input-form-center">
            <label class="product-name">Фото</label>
            <div class="gallery-box">
                <ul class="input-wrapper">
                </ul>
                <ul class="grey-wrapper"></ul>
            </div>
        </div>
        <div class="flex-input-form flex-input-form-center">
            <label class="product-name">Описание товара</label>
            <textarea required class="form-input textarea" name="description" placeholder=" " minlength="5"></textarea>
        </div>
        <div class="flex-input-form">
            <label class="product-name">Категория товара</label>

            <select class="form-input" name="category">
                {{#each categories}}
                {{!-- <option value="null" hidden class="category visually-hidden" selected disabled>Категория</option> --}}
                <option required value={{this}} class="select-option">{{this}}</option>
                {{/each}}
            </select>
        </div>
        <div class="flex-input-form">
            <label class="product-name price-label">Цена</label>
            <input required type="number" class="form-input" placeholder="0.00 &euro;" name="price" />
        </div>
        <div class="flex-input-form">
            <label class="product-name tel-label">Телефон</label>
            <input required type="tel" class="form-input tel-input-form" name="phone"" minlength='17' maxlength='17'
                {{!-- pattern=" ^+380\d{3}\d{2}\d{2}\d{2}$"  --}}
                placeholder=" +380-- --- -- --" title="The value is too short, it must be at least 17 symbols" />
        </div>
    </div>
    <button type="reset" class="clean-button">
        <span class="button-text">Удалить объявление</span>
    </button>
    <button type="submit" class="push-button">
        <span class="button-text">Добавить</span>
    </button>
</form>